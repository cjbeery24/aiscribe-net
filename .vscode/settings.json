{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.enableRoslynAnalyzers": true,
  "csharp.format.enable": true,
  "csharp.format.newLine": "lf",
  "csharp.format.indentSize": 4,
  "csharp.format.indentStyle": "space",
  "csharp.format.newLinesBeforeBraces": "all",
  "csharp.format.spaceAfterCast": false,
  "csharp.format.spaceAfterKeywordsInControlFlowStatements": true,
  "csharp.format.spaceBetweenMethodCallParameterListParentheses": false,
  "csharp.format.spaceBetweenMethodDeclarationParameterListParentheses": false,
  "csharp.format.spaceBetweenParentheses": false,
  "csharp.format.spaceBeforeColonInInheritanceClause": true,
  "csharp.format.spaceAfterColonInInheritanceClause": true,
  "csharp.format.spaceAroundBinaryOperators": "beforeAndAfter",
  "csharp.format.spaceBetweenMethodDeclarationEmptyParameterListParentheses": false,
  "csharp.format.spaceBetweenMethodCallNameAndOpeningParenthesis": false,
  "csharp.format.spaceBetweenMethodCallEmptyParameterListParentheses": false,
  "csharp.format.indentCaseContents": true,
  "csharp.format.indentSwitchLabels": true,
  "csharp.format.indentLabels": "flushLeft",
  "csharp.format.newLineBeforeElse": true,
  "csharp.format.newLineBeforeCatch": true,
  "csharp.format.newLineBeforeFinally": true,
  "csharp.format.newLineBeforeMembersInObjectInitializers": true,
  "csharp.format.newLineBeforeMembersInAnonymousTypes": true,
  "csharp.format.newLineBetweenQueryExpressionClauses": true,
  "dotnet.defaultSolution": "SermonTranscription.sln",
  "files.exclude": {
    "**/bin": true,
    "**/obj": true,
    "**/.vs": true
  },
  "search.exclude": {
    "**/bin": true,
    "**/obj": true,
    "**/.vs": true,
    "**/node_modules": true
  },
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true
}
